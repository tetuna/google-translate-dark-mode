{
    "manifest_version": 3,
    "name": "Google Translate Dark Mode",
    "icons": {
        "32": "icon32.png"
    },
    "version": "1.2",
    "description": "Google Translate Dark Mode without annoying ADS!",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://translate.google.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "main.css"
            ],
            "matches": [
                "https://translate.google.com/*"
            ]
        }
    ]
}